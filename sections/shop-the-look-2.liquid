
{% if section.settings.stl_version == "displayed" %}
  {% render "shop-the-look-displayed-2" %}
{% else %}
  {% render "shop-the-look-carousel-2" %}
{% endif %}


{% schema %}
{
  "name": "Shop the Look 2",
  "settings": [
    {
           "type": "paragraph",
           "content": "Preview may break during editing. Hit Save in the Customizer to reload and wait for the page to finish loading."
        },
        {
          "type":   "range",
          "id":     "max-width",
          "min":       0,
          "max":       100,
          "step":      5,
          "unit":      "%",
          "label":     "Width Desktop",
          "default":   100
      },
      {
          "type":   "range",
          "id":     "max-width-mobile",
          "min":       0,
          "max":       100,
          "step":      5,
          "unit":      "%",
          "label":     "Width Mobile",
          "default":   100
      },
        {
          "type": "radio",
          "id": "stl_version",
          "label": "Shop the Look type",
          "info": "Hit Save in the Customizer and wait for page load to reflect changes properly",
          "options": [
            {
              "value": "displayed",
              "label": "Displayed (Max 2 items)"
            },
            {
              "value": "carousel",
              "label": "Carousel"
            }
          ],
          "default": "carousel"
        },
        {
          "type": "radio",
          "id": "img_side",
          "label": "Big image side",
          "options": [
            {
              "value": "right",
              "label": "Right"
            },
            {
              "value": "left",
              "label": "Left"
            }
          ],
          "default": "left"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "id": "subtitle",
          "type": "text",
          "label": "Subtitle"
        },
    {
          "id": "cta_text",
          "type": "text",
          "label": "Button Text",
    "default": "View Product"
        },
    {
          "id": "cta_text_mobile",
          "type": "text",
          "label": "Mobile Button Text",
    "default": "View Product"
        },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "type":   "range",
          "id":     "section-margin-top",
          "min":       0,
          "max":       100,
          "step":      5,
          "unit":      "px",
          "label":     "Section Top Margin",
          "default":   0
      },
      {
          "type":   "range",
          "id":     "section-margin-bottom",
          "min":       0,
          "max":       100,
          "step":      5,
          "unit":      "px",
          "label":     "Section Bottom Margin",
          "default":   0
      },
      {
        "type": "select",
        "id": "mobile-margin",
        "label": "Vertical Margin Mobile",
        "default": "none",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "big",
            "label": "Big"
          }
        ]
      }
      
],
"blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "id": "product",
          "type": "product",
          "label": "Product"
        },
        {
          "type": "range",
          "id": "top",
          "label": "Position from Top",
          "step": 1,
          "min": 0,
          "max": 100,
          "unit": "%",
          "default": 0
        },
        {
          "type": "range",
          "id": "left",
          "label": "Position from Left",
          "step": 1,
          "min": 0,
          "max": 100,
          "unit": "%",
          "default": 0
        }
      ]
    }
  ],
"presets": [
      {
        "category": "Shop the look 2",
        "name": "Shop the look 2"
      }
    ]
}
{% endschema %}