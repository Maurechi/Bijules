
<script>
  document.addEventListener('DOMContentLoaded', function(){
    $('.ifp-inner').slick({
      dots: false,
      infinite: false,
      speed: 300,
      slidesToShow: 4,
      slidesToScroll: 4,
      nextArrow: '<button class="slick-next next-arrow icon icon--next"><span class="visuallyhidden">Next slides</span></button>',
      prevArrow: '<button class="slick-prev prev-arrow icon icon--prev"><span class="visuallyhidden">Previous slides</span></button>',
      responsive: [
       
        {
          breakpoint: 980,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });

    $('.stl-2-right--slider').slick({
      dots: false,
      infinite: false,
      speed: 300,
      arrows: false,
      slidesToShow: 1,
      slidesToScroll: 1,
      customPaging : function(slider, i) {
        return '<span></span>';
      }
    });
    var $scale,$transform,i,e,n,s,a,o,r,l;
    $('.stl-2-dot').click(function(){
      var $index = $(this).data('index');
      $('.stl-2-right--slider').slick('slickGoTo',$index);
      $('.stl-2-dot').removeClass('stl-2-dot--active');
      $('.stl-2-item').removeClass('stl-2-item-active');
      $(`#${$index}2`).addClass('stl-2-item-active');
      $(this).addClass('stl-2-dot--active');
      if($(window).width() <= 991){
        if(!$('.stl-2-wrapper').hasClass('zoomed-in')){
          $scale = 1+($('.stl-2-left').width()/$(window).width());
          $('html,body').addClass('no-scroll');
          $('.stl-2-wrapper').addClass('zoomed-in');

          i = document.querySelector('.stl-2-left');
          e = document.querySelector('.stl-2-right--inner')
          n = window.innerWidth / (i.offsetWidth - 2 * parseInt(window.getComputedStyle(i).paddingLeft));
          s = Math.round(i.offsetHeight * n),
            a = Math.round(Math.max(s - (window.innerHeight - e.offsetHeight), 0)),
            o = s - a,
            r = Math.round(-(i.getBoundingClientRect().top - (s - i.offsetHeight) / 2)),
            l = Math.round(r - a);
        }
        e = document.querySelector('.stl-2-dot.stl-2-dot--active')
        i = Math.round((e.offsetTop + e.offsetHeight / 2) * n),
          s = Math.round(i - o / 2),
          a = Math.min(Math.max(r - s, l), r);

        $('.stl-2-left').css('transform','translateY('+a+'px) scale('+n+')');
      }

    });

    $('.stl-2-dot').mouseenter(function(){
      if($(window).width() >= 991){ 
        var $index = $(this).data('index');
        $(`#${$index}2`).addClass('stl-2-item-active');
        $(`#btn-${$index}2`).addClass('stl-2-btn-active');
      }
    });
    $('.stl-2-dot').mouseleave(function(){
      if($(window).width() >= 991){ 
        var $index = $(this).data('index');
        $(`#${$index}2`).removeClass('stl-2-item-active');
        $(`#btn-${$index}2`).removeClass('stl-2-btn-active');
      }
    });

    $('.stl-2-right-header span').click(function(){
      $('html,body').removeClass('no-scroll');
      $('.stl-2-wrapper').removeClass('zoomed-in');

      $('.stl-2-left').css('transform','scale(1)');

    });
    $('.stl-2-right--slider').on('afterChange', function(event, slick, currentSlide, nextSlide){
      var $index = currentSlide;
      if(!$('.stl-2-dot[data-index="'+$index+'"]').hasClass('stl-2-dot--active')){
        $('.stl-2-dot').removeClass('stl-2-dot--active');
        $('.stl-2-dot[data-index="'+$index+'"]').addClass('stl-2-dot--active').trigger('click');
      }
    });
  });
</script>

