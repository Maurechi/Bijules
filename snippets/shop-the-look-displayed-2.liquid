<div class="index--shop-the-look">
  <div class="stl-2-wrapper">
    <div class="stl-2-left">
      <div class="stl-2-left--inner">
        {% if section.settings.image != blank %}
          {%- liquid 
            assign image_alt_1 = section.settings.image.alt
            assign  image_url_small_1 = section.settings.image | img_url: '60x'
            assign  image_url_210_1 = section.settings.image | img_url: '210x'
            assign  image_url_420_1 = section.settings.image | img_url: '420x'
            assign  image_url_730_1 = section.settings.image | img_url: '730x'
            assign  image_url_1270_1 = section.settings.image | img_url: '1270x'
            assign  image_url_1650_1 = section.settings.image | img_url: '1650x'
            assign  image_url_2000_1 = section.settings.image | img_url: '2000x'
            -%}
            <img loading="lazy"  src="{{ image_url_small_1 }}"
              data-srcset="{{ image_url_210_1 }} 210w, {{ image_url_420_1 }} 420w, {{ image_url_730_1 }} 730w  {{ image_url_1270_1 }} 1270w, {{ image_url_1650_1 }} 1650w,  {{ image_url_2000_1 }} 2000w"
              data-sizes="auto"  alt="{{ image_alt_1 }}"
              class="lazyload"
              />
        {% endif %}
        {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            <span class="stl-2-dot" data-index="{{ forloop.index0 }}" style="top:{{ block.settings.top }}%;left:{{ block.settings.left }}%;"></span>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    <div class="stl-2-right">
      <div class="stl-2-right--inner">
        <div class="stl-2-right-header">
          <span>
            <svg class="Icon Icon--close" role="presentation" viewBox="0 0 16 14">
              <path d="M15 0L1 14m14 0L1 0" stroke="currentColor" fill="none" fill-rule="evenodd"></path>
            </svg>
          </span>
          {% if section.settings.subtitle != blank %}<h3 class="subtitle">{{ section.settings.subtitle }}</h3>{% endif %}
        </div>
        <div class="stl-2-right--slider">
          {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            {%- liquid
              assign thisProduct = all_products[block.settings.product]
              assign image_alt = thisProduct.alt
              assign  image_url_small = thisProduct | img_url: '60x'
              assign  image_url_210 = thisProduct | img_url: '210x'
              assign  image_url_420 = thisProduct | img_url: '420x'
              assign  image_url_730 = thisProduct | img_url: '730x'
              -%}
          <div class="stl-2-item">
            <a class="limited" href="{{ thisProduct.url }}">
            <div class="stl-2-img">
              <img loading="lazy"  src="{{ image_url_small }}"
              data-srcset="{{ image_url_210 }} 210w, {{ image_url_420 }} 420w, {{ image_url_730 }} 730w"
              data-sizes="auto"  alt="{{ image_alt }}"
              class="lazyload"
              />
            </div>
            <h4 class="title">{{ thisProduct.title }}</h4>
            <h5 class="price">{{ thisProduct.price | money }}</h5>
            </a>
            <a href="{{ thisProduct.url }}" class="stl-2-btn">{{ section.settings.cta_text }}</a>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      </div>
      <div class="stl-2-mobile-btns">
        <a href="javascript:void(0);" onclick="$('.stl-2-dot--active').trigger('click')" data-index="{{ forloop.index0 }}" {% if forloop.first %}style="display:block;"{% endif %} class="stl-2-btn">{{ section.settings.cta_text_mobile }}</a>
      </div>
    </div>
    <div class="stl-2-itemlist">
          {% for block in section.blocks %}
          {% if block.settings.product != blank %}
            {%- liquid
              assign thisProduct = all_products[block.settings.product]
              assign image_alt = thisProduct.alt
              assign  image_url_small = thisProduct | img_url: '60x'
              assign  image_url_210 = thisProduct | img_url: '210x'
              assign  image_url_420 = thisProduct | img_url: '420x'
              assign  image_url_730 = thisProduct | img_url: '730x'
              -%}
              <div class="stl-2-item" id="{{ forloop.index0 }}2">
                <a class="limited-height" href="{{ thisProduct.url }}">
                 <img loading="lazy"  src="{{ image_url_small }}"
              data-srcset="{{ image_url_210 }} 210w, {{ image_url_420 }} 420w, {{ image_url_730 }} 730w"
              data-sizes="auto"  alt="{{ image_alt }}"
              class="stl-2-img lazyload"
              />
                </a>
                <div class="item-info">
                  <h4 class="title">{{ thisProduct.title }}</h4>
                  <h5 class="price">{{ thisProduct.price | money }}</h5>
                  <a href="{{ thisProduct.url }}" id="btn-{{ forloop.index0 }}2" class="stl-2-btn">{{ section.settings.cta_text }}</a>
                </div>
              </div>
            {% endif %}
          {% endfor %}
    </div>
  </div>  
</div>