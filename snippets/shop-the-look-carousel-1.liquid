{% capture stl_image %}
<div class="stl-left">
  <div class="stl-left--inner">
    {% if section.settings.image != blank %}
      {%- liquid 
        assign image_alt_1 = section.settings.image.alt
        assign  image_url_small_1 = section.settings.image | img_url: '60x'
        assign  image_url_210_1 = section.settings.image | img_url: '210x'
        assign  image_url_420_1 = section.settings.image | img_url: '420x'
        assign  image_url_730_1 = section.settings.image | img_url: '730x'
        assign  image_url_1270_1 = section.settings.image | img_url: '1270x'
        assign  image_url_1650_1 = section.settings.image | img_url: '1650x'
        assign  image_url_2000_1 = section.settings.image | img_url: '2000x'
        -%}
        <img loading="lazy"  src="{{ image_url_small_1 }}"
          data-srcset="{{ image_url_210_1 }} 210w, {{ image_url_420_1 }} 420w, {{ image_url_730_1 }} 730w  {{ image_url_1270_1 }} 1270w, {{ image_url_1650_1 }} 1650w,  {{ image_url_2000_1 }} 2000w"
          data-sizes="auto"  alt="{{ image_alt_1 }}"
          class="lazyload"
          />
    {% endif %}
    {% for block in section.blocks %}
    {% if block.settings.product != blank %}
    <span class="stl-dot {% if forloop.first %}stl-dot--active{% endif %}" data-index="{{ forloop.index0 }}" style="top:{{ block.settings.top }}%;left:{{ block.settings.left }}%;"></span>
    {% endif %}
    {% endfor %}
    </div>
  </div>
{% endcapture %}

