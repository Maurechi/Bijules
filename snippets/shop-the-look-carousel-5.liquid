    }
    
    .stl-5-img img {
    	max-height: 200px;
      object-fit: contain;
    }
  }
  
  .slick-dots {
    position: absolute;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-justify-content: center;
    -ms-flex-pack: justify;
        justify-content: center;
    z-index: 9;
    list-style-type: none !important;
}
  
  .slick-dots li {
    margin: 10px !important;
