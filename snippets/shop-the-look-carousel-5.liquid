
<script>
  document.addEventListener('DOMContentLoaded', function(){
    $('.ifp-inner').slick({
      dots: false,
      infinite: false,
      speed: 300,
      slidesToShow: 4,
      slidesToScroll: 4,
      nextArrow: '<button class="slick-next next-arrow icon icon--next"><span class="visuallyhidden">Next slides</span></button>',
      prevArrow: '<button class="slick-prev prev-arrow icon icon--prev"><span class="visuallyhidden">Previous slides</span></button>',
      responsive: [
        {
          breakpoint: 991,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 3
          }
        },
        {
          breakpoint: 767,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 2
          }
        },
        {
          breakpoint: 480,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });

    $('.stl-5-right--slider').slick({
      dots: true,
      infinite: false,
      speed: 300,
      arrows: false,
      slidesToShow: 1,
      slidesToScroll: 1,
      customPaging : function(slider, i) {
        return '<span></span>';
      }
    });
    var $scale,$transform,i,e,n,s,a,o,r,l;
    $('.stl-5-dot').click(function(){
      var $index = $(this).data('index');
      $('.stl-5-right--slider').slick('slickGoTo',$index);
      $('.stl-5-dot').removeClass('stl-5-dot--active');
      $(this).addClass('stl-5-dot--active');
      if($(window).width() <= 991){
        if(!$('.stl-5-wrapper').hasClass('zoomed-in')){
          $scale = 1+($('.stl-5-left').width()/$(window).width());
          $('html,body').addClass('no-scroll');
          $('.stl-5-wrapper').addClass('zoomed-in');

          i = document.querySelector('.stl-5-left');
          e = document.querySelector('.stl-5-right--inner')
          n = window.innerWidth / (i.offsetWidth - 2 * parseInt(window.getComputedStyle(i).paddingLeft));
          s = Math.round(i.offsetHeight * n),
            a = Math.round(Math.max(s - (window.innerHeight - e.offsetHeight), 0)),
            o = s - a,
            r = Math.round(-(i.getBoundingClientRect().top - (s - i.offsetHeight) / 2)),
            l = Math.round(r - a);
        }
        e = document.querySelector('.stl-5-dot.stl-5-dot--active')
        i = Math.round((e.offsetTop + e.offsetHeight / 2) * n),
          s = Math.round(i - o / 2),
          a = Math.min(Math.max(r - s, l), r);

        $('.stl-5-left').css('transform','translateY('+a+'px) scale('+n+')');
      }

    });
    $('.stl-5-right-header span').click(function(){
      $('html,body').removeClass('no-scroll');
      $('.stl-5-wrapper').removeClass('zoomed-in');

      $('.stl-5-left').css('transform','scale(1)');

    });
    $('.stl-5-right--slider').on('afterChange', function(event, slick, currentSlide, nextSlide){
      var $index = currentSlide;
      if(!$('.stl-5-dot[data-index="'+$index+'"]').hasClass('stl-5-dot--active')){
        $('.stl-5-dot').removeClass('stl-5-dot--active');
        $('.stl-5-dot[data-index="'+$index+'"]').addClass('stl-5-dot--active').trigger('click');
      }
    });
  });
</script>

