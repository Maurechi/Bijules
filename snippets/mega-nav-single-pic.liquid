          <div class="menu-image-teaser-link-wrapper">
            <img loading="lazy" src="{{ settings.navlink3_image | img_url: '500x' }}" />
            <div class="top-mega-nav-link-image-right-text">{{ settings.navlink3_heading1 }}<span>{{ settings.navlink3_heading2 }}</span></div>
