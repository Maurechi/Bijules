            <div class="top-mega-nav-link-image-right-text">{{ settings.navlink5_heading1 }}<span>{{ settings.navlink5_heading2 }}</span></div>
          </div>
        </a>
      </li>

      {% endif %}

      {% when 6 %}
      {% if settings.navlink6_image %}
      <li class="single-featured-image top-mega-nav-link-image-mm top-mega-nav-link-image-right top-mega-nav-link_mm_li image__link{% if link.active %} active{% endif %} level-1">
        <a  class="top-mega-nav-link_mm{% if link.active %} active{% endif %} level-1" href="{{ link.url }}">
          <div class="menu-image-teaser-link-wrapper">
            <img loading="lazy" src="{{ settings.navlink6_image | img_url: '500x' }}" />
            <div class="top-mega-nav-link-image-right-text">{{ settings.navlink6_heading1 }}<span>{{ settings.navlink6_heading2 }}</span></div>
          </div>
        </a>
      </li>

      {% endif %}

      {% endcase %}


    </ul>
    {% endif %}
  </div>
</div>

