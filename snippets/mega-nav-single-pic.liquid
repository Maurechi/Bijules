        <a  class="top-mega-nav-link_mm{% if link.active %} active{% endif %} level-1" href="{{ link.url }}">
          <div class="menu-image-teaser-link-wrapper">
            <img loading="lazy" src="{{ settings.navlink4_image | img_url: '500x' }}" />
            <div class="top-mega-nav-link-image-right-text">{{ settings.navlink4_heading1 }}<span>{{ settings.navlink4_heading2 }}</span></div>
          </div>
        </a>
      </li>

      {% endif %}
      {% when 5 %}
