            <img loading="lazy" src="{{ settings.navlink2_image | img_url: '500x' }}" />
            <div class="top-mega-nav-link-image-right-text">{{ settings.navlink2_heading1 }}<span>{{ settings.navlink2_heading2 }}</span></div>
          </div>
        </a>
      </li>

      {% endif %}
      {% when 3 %}
      {% if settings.navlink3_image %}
